<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"

        android:layout_above="@id/input_group">

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/imageView2"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:background="@drawable/toname"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_weight="6"
        android:id="@+id/input_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:gravity="center">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:background="@drawable/customborder"
            android:id="@+id/contetns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/text_id"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sc_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="3"
                android:text="id"/>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/text_company"/>

            <TextView
                android:id="@+id/sc_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="5"
                android:text="sc_compnay"/>



        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:background="@drawable/text_nc"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sc_ncCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="sc_nccode"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/text_name"/>

            <TextView
                android:id="@+id/sc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="sc_name"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textview81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/text_phone"
                android:layout_weight="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sc_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:text="sc_phone"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/customborder"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/textview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/text_email"/>
            <TextView
                android:id="@+id/sc_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:textSize="20sp"
                android:text="sc_email"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"    >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_past"
                android:background="@drawable/button2"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="10dp"
                android:text="이전으로"
                android:textAllCaps="true"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="#86A8E7"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>